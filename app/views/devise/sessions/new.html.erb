<section class="hero">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Log in
      </h1>
      <h2 class="subtitle">
        It's so much cooler when you're logged in.
      </h2>
    </div>
  </div>
</section>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, :class => 'label' %>
    <div class="control">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "input" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password, :class => 'label' %>
    <div class="control">
      <%= f.password_field :password, autocomplete: "off", :class => "input" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.label :remember_me, :class => "checkbox" do %>
        <%= f.check_box :remember_me %>
        Remember me
    <% end %>
    </div>
  <% end -%>

  <div class="field is-grouped">
    <div class="control">
      <%= f.submit "Log in", :class => 'button' %>
    </div>
    <div class="control">
      <%= render "devise/shared/links", :class => "button is-text" %>
    </div>
  </div>
<% end %>

