<div class="section">
  <div class="container">
    <div class="breadcrumb is-centered" aria-label="breadcrumbs">
      <ul>
        <%= render_breadcrumbs :tag => :li, :separator => "" %>
      </ul>
    </div>
    <% unless devise_controller? %>
      <% if current_user %>
        <div class="card is-centered">
          <div class="card-content">
            <div class="media">
              <div class="media-left">
                <figure class="image is-96x96">
                  <img src="<%= current_user.avatar.thumb %>" alt="User thumbnail">
                </figure>
              </div>
              <div class="media-content">
                <p class="title is-4"> <%= current_user.fullname %></p>
                <%= link_to 'New post', new_user_post_path(current_user) , :class => 'button' %>
              </div>
              <div class="media-right">
                <div class="field">
                  <div class="control">
                    <%= link_to 'Logout', destroy_user_session_path, method: :delete, :class => 'button is-text' %>
                  </div>
                </div>
              </div>
            </div>
            <div class="content">
            </div>
          </div>
        </div>
        </div>
      <% else %>
        <div class="card">
          <div class="card-content">
            <p class="title">
              “There are two hard things in computer science: cache invalidation, naming things, and off-by-one errors.”
            </p>
          </div>
          <footer class="card-footer">
            <p class="card-footer-item">
            <span>
              <%= link_to 'Log in', new_user_session_path, :class => 'button is-text' %>
            </span>
            </p>
            <p class="card-footer-item">
            <span>
              <%= link_to 'Sign up', new_user_registration_path, :class => 'button is-text' %>
            </span>
            </p>
          </footer>
        </div>
      <% end %>
    <%  end %>
    </div>
